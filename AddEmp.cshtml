@{
}

@model Emp

<div class="container mt-5 d-flex justify-content-center">
	<div class="card shadow-lg p-4 border-0" style="max-width: 450px; width: 100%; background-color: #f8f9fa;">
		<h3 class="text-center mb-4 fw-bold text-secondary">Employee Form</h3>
		<form method="post" enctype="multipart/form-data"> 
			<div class="mb-3">
				<label class="form-label fw-semibold text-secondary">Name</label>
				<input asp-for="empName" class="form-control shadow-sm border-0 rounded-3" />
				<span asp-validation-for="empName" class="text-danger small"></span>
			</div>

			<div class="mb-3">
				<label class="form-label fw-semibold text-secondary">Email</label>
				<input asp-for="empEmail" class="form-control shadow-sm border-0 rounded-3" />
				<span asp-validation-for="empEmail" class="text-danger small"></span>
			</div>

			<div class="mb-3">
				<label class="form-label fw-semibold text-secondary">Salary</label>
				<input asp-for="empSalary" class="form-control shadow-sm border-0 rounded-3" />
				<span asp-validation-for="empSalary" class="text-danger small"></span>
			</div>

			<div class="mb-3">
				<label class="form-label fw-semibold text-secondary">Picture</label>
				<input type="file" asp-for="eimg" class="form-control shadow-sm border-0 rounded-3" />
				
			</div>

			<button type="submit" class="btn btn-primary w-100 shadow-sm rounded-3 fw-semibold">Save</button>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
